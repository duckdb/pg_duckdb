-- Test +/- inf values
CREATE TABLE t(a DATE);
INSERT INTO t VALUES('Infinity'), ('-Infinity');
-- PG Execution
SELECT * from t ORDER by a;
     a     
-----------
 infinity
 -infinity
(2 rows)

SELECT isfinite(a) FROM t;
 isfinite 
----------
 f
 f
(2 rows)

set duckdb.force_execution = true;
-- DuckDB execution
SELECT * from t ORDER BY a;
     a     
-----------
 infinity
 -infinity
(2 rows)

SELECT isfinite(a) FROM t;
 isfinite 
----------
 f
 f
(2 rows)

-- Cleanup
set duckdb.force_execution = false;
DROP TABLE t;
