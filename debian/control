               postgresql-all-dev (>= 14),
               postgresql-server-dev-all,
               build-essential,
               libreadline-dev,
               zlib1g-dev,
               flex,
               bison,
               libxml2-dev,
               libxslt-dev,
               libssl-dev,
               libxml2-utils,
               xsltproc,
